@using CDOrganizer.Models;

<h3>Here are all the albums in this genre:</h3>
@if (@Model.Count == 0)
{
  <h5>No albums have been added yet!</h5>
}
<ol>
  @foreach (Album album in @Model["albums"])
  {
    <li><a href='/genres/@Model["genre"].Id/album/@album.Id'>@album.Name</a></li>
  }
</ol>

<p>Add a new <a href='/genres/@Model["genre"].Id/album/new'>album</a></p>
<p>Return to <a href='/genres'>genre</a> list</p>
<p>Return <a href='/'>Home</a></p>