<h1>Add an album to the @Model.Name genre.</h1>

<form action="/genres/@Model.Id/album" method="POST">
  <input id="genreId" name="genreId" type="hidden" value="@Model.Id">
  <label for="albumName">Album Name: </label>
  <input id="albumName" name="albumName" type="text">
  <button type="submit">Add</button>
</form>

<p>return <a href="/">Home</a></p>
<p>back to <a href="/album">Album List</a></p>